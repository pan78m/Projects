<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activities"
    tools:context=".Activity.Omor_amozeshi_activities.Karname">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_karname_id"
        android:elevation="@dimen/elevation_5dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <Spinner
        android:id="@+id/spn_nimsaltahsili_karname_id"
        android:layout_below="@id/toolbar_karname_id"
        android:layout_margin="@dimen/margin_5dp"
        style="@style/DropSpinner"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_below="@id/spn_nimsaltahsili_karname_id"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_5dp"
                android:id="@+id/l2"
                android:weightSum="1"
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.0625"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.0625"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/amali"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.0625"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/nazari"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.1875"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:text="@string/vaziat"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.125"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:text="@string/nomre"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="@string/techer"
                    android:layout_weight="0.1875"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.1875"
                    android:text="@string/lessonname"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="0.125"
                    android:text="@string/lessoncode"
                    android:textColor="@color/black_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/view_uup"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_below="@id/l2"
                android:background="@color/red_color" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/view_uup"
                android:id="@+id/recycler_karname_id"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>