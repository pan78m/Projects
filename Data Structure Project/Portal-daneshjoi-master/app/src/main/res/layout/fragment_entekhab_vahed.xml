<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_activities"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardElevation="@dimen/cardelevation_3dp"
                android:id="@+id/item00"
                android:layout_below="@id/itemcard1"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:id="@+id/item0"
                        android:layout_margin="@dimen/margin_10dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_rederror"
                        android:layout_height="100dp"
                        android:contentDescription="@string/error_vahed"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/txt_bedehkari_entekhabvahed_id"
                        android:layout_height="wrap_content"
                        android:text="@string/bedehkar0"
                        android:fontFamily="@font/iransans"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_18sp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:layout_margin="@dimen/padding_10dp"
                        android:layout_toStartOf="@+id/item0"
                        android:layout_toLeftOf="@+id/item0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/zaman0"
                        android:fontFamily="@font/iransans"
                        android:textStyle="bold"
                        android:id="@+id/item1"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/textsize_18sp"
                        android:textColor="@color/black_color"
                        android:layout_margin="@dimen/padding_10dp"
                        android:layout_below="@id/txt_bedehkari_entekhabvahed_id"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/item0"
                        android:layout_toLeftOf="@+id/item0" />

                    <LinearLayout
                        android:layout_below="@id/item1"
                        android:weightSum="1"
                        android:layout_margin="@dimen/margin_10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:id="@+id/btn_zamanbandi_link_id"
                            android:text="@string/zaman_bandi"
                            android:fontFamily="@font/titr"
                            android:layout_height="match_parent"
                            tools:ignore="ButtonStyle" />

                        <Button
                            android:id="@+id/btn_pardakht_link_id"
                            android:text="@string/pardakhtshahrie"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/titr"
                            android:layout_height="match_parent"
                            tools:ignore="ButtonStyle" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:id="@+id/itemcard1"
                app:cardElevation="@dimen/cardelevation_3dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:id="@+id/item01"
                        android:layout_margin="@dimen/margin_10dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_greentick"
                        android:layout_height="100dp"
                        android:contentDescription="@string/error_vahed"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/txt_mojaz_be_entekhabvahed_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/item01"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_marginEnd="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:layout_toStartOf="@+id/item01"
                        android:layout_toLeftOf="@+id/item01"
                        android:text="@string/faalast"
                        android:fontFamily="@font/iransans"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/textsize_18sp"
                        android:textStyle="bold" />

                    <Button
                        android:text="@string/enterentekhab"
                        android:textStyle="bold"
                        android:background="#e5facc"
                        android:id="@+id/btn_enter_to_entekhabvahed_id"
                        android:fontFamily="@font/titr"
                        android:layout_width="match_parent"
                        android:layout_below="@id/item01"
                        tools:ignore="ButtonStyle"
                        android:layout_margin="@dimen/margin_15dp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>