<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background_activities"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/margin_5dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:elevation="5dp"
        android:id="@+id/itemlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textsize_18sp"
            android:text="@string/vahed0"
            android:layout_width="0dp"
            android:id="@+id/txt_vahed_id"
            android:textStyle="bold"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="0.75"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/txt_name_id"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textsize_18sp"
            android:text="@string/lessonname"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_up"
        android:layout_below="@id/itemlinear"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@color/red_color" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycler_entekhabvahed_id"
        android:layout_below="@id/view_up"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>