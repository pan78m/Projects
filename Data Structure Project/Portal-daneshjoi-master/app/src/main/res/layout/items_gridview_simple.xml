<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_items_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/background_btns"
        android:contentDescription="@string/content"
        android:padding="@dimen/padding_15dp"/>

    <TextView
        android:id="@+id/txt_items_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_items_id"
        android:layout_alignStart="@id/img_items_id"
        android:layout_alignLeft="@id/img_items_id"
        android:layout_alignEnd="@id/img_items_id"
        android:layout_alignRight="@id/img_items_id"
        android:layout_marginTop="@dimen/margin_15dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textsize_14sp" />


</RelativeLayout>