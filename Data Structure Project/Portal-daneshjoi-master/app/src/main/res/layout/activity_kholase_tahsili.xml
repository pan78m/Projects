<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/background_activities"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Other_Activitys.Kholase_tahsili">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:elevation="@dimen/elevation_5dp"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_kholase_tahsili_id"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_centerInParent="true"
        app:cardElevation="@dimen/cardelevation_3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/modalekol"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item0"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/kolvahedgh"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/vahedentekhab"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/moadeleghabl"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/vaziatetermghabl"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/saghfevahed"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/item6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="@string/mashrotterms"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/txt_moadele_kol_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="14.58"
                android:textColor="@color/green_color"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kolvahed_ghaboli_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_moadele_kol_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="94"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kolvahed_entekhabi_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_kolvahed_ghaboli_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="113"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_moadel_term_ghabl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_kolvahed_entekhabi_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="15.24"
                android:textColor="@color/purple_color"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_vaziate_term_ghabl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_moadel_term_ghabl_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="عادی"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_saghfe_vahed_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_vaziate_term_ghabl_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="8"
                android:textColor="@color/green_color"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_termhaye_mashrot_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_saghfe_vahed_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_10dp"
                android:text="0"
                android:textColor="@color/red_color"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
