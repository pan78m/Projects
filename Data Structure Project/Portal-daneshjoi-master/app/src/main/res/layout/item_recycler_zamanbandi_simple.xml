<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:id="@+id/l1"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.2"
            android:id="@+id/txt_kontrolmoadel_id"
            android:textAlignment="center"
            android:textColor="@color/black_color"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="0.2"
            android:id="@+id/txt_time_id"
            android:textColor="@color/red_color"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_salvorod_id"
            android:layout_weight="0.2"
            android:textColor="@color/green_color_Dark"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_enddate_id"
            android:layout_weight="0.2"
            android:textColor="@color/black_color"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_startdate_id"
            android:layout_weight="0.2"
            android:textColor="@color/black_color"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_below="@id/l1"
        android:background="#68000000" />

</RelativeLayout>